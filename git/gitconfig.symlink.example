[user]
  name = AUTHOR_NAME
  email = AUTHOR_EMAIL
[alias]
  co = checkout
  br = branch
  l = log --graph --decorate --abbrev-commit --pretty=oneline -n 20
  ctags = !.git/hooks/ctags
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
  editor = vim
[init]
  templatedir = ~/.dotfiles/git/template
[apply]
  whitespace = nowarn
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[push]
  default = simple
